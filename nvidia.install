EXTRAMODULES='3.7-BEDE-external'

post_install() {
	depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_upgrade() {
	post_install
	rmmod nvidia || echo 'In order to use the new nvidia module, exit Xserver and unload it manually.'
}

post_remove() {
	depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}
